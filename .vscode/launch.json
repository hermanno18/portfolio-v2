    "version": "0.2.0",
    "configurations": [
      {
        "type": "chrome",
        "request": "launch",
        "name": "client: chrome",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "server: nuxt",
        "program": "${workspaceFolder}/node_modules/nuxi/bin/nuxi.mjs",
        "args": [
          "dev"
        ],
      }
    ],
    "compounds": [
      {
        "name": "fullstack: nuxt",
        "configurations": [
          "server: nuxt",
          "client: chrome"
        ]
      }
    ]
}